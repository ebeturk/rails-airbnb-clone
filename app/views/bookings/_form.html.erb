 <%= simple_form_for(booking) do |f| %>

  <%= f.input :start_time, as: :date,
  order: [:day, :month, :year] %>
  <%= f.input :end_time, as: :date,
  order: [:day, :month, :year] %>
  <%= f.input :accepts, as: :boolean, checked_value: 'positive', unchecked_value: 'negative' %>
  <%= f.button :submit %>
 <% end %>


