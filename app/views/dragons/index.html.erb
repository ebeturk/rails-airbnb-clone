<h1>See All Our Dragons </h1>

<div class="cards">
  <% @dragons.each do |dragon| %>
  <%= render "layouts/shared/card_index", dragon: dragon  %>
  <% end %>
</div>

<div class="map" style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>

<%= link_to "Add your Dragon", new_dragon_path %>
