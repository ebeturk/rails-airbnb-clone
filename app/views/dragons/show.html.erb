<h1 class="title-card">See Dragon Details</h1>

<div class="card-dragon">
  <%= cl_image_tag @dragon.photo.key, crop: :fill %>
      <div class="card-dragon-description">
        <h3> <%= @dragon.name %> </h3>
        <h4> Special Power: <strong><%= @dragon.power %></strong></h4>
        <h5> Age: <%= @dragon.age %> </h5>
        <h5> Level: <%= @dragon.level %></h5>
        <h5 class="card-dragon-pricing"> Price: â‚¿ <%= @dragon.price %></h5>
        <h6>Free cancellation for 48 hours</h6>
      </div>
      <div class="booking-dragon">
        <% if @dragon.bookings.find_by(user_id: current_user.id) %>
          <h6 class="text-danger"><%= "This beast is already booked" %></h6>
        <% end %>
        <br>
        <%= render "bookings/form", dragon: @dragon, booking: @booking %>
      </div>
    <div class="buttons btn-back-to-dragons">
      <%# <%= link_to "Book this Beast!", new_dragon_booking_path(@dragon), class: "btn btn-ghost" %>
      <%= link_to "Back to Dragons", dragons_path, class: "btn btn-ghost" %>
    </div>
  </div>
</div>
